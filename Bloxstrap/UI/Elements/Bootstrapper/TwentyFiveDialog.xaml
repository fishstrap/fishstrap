<base:WpfUiWindow
    xmlns:base="clr-namespace:Bloxstrap.UI.Elements.Base"
    x:Class="Bloxstrap.UI.Elements.Bootstrapper.TwentyFiveDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:Bloxstrap.Resources"
    xmlns:vms="clr-namespace:Bloxstrap.UI.ViewModels.Bootstrapper"
    Width="576"
    Height="482"
    MinHeight="0"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Background="#000000"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Disable"
    Closing="UiWindow_Closing"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <base:WpfUiWindow.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="{Binding Path=TaskbarProgressState}" ProgressValue="{Binding Path=TaskbarProgressValue}" />
    </base:WpfUiWindow.TaskbarItemInfo>

    <Grid>
        <ui:TitleBar Title="" Width="576" Height="32" ShowMaximize="False" ShowMinimize="False" ShowClose="False"/>
        <Image Height="254" Width="254" HorizontalAlignment="Center" VerticalAlignment="Top" Source="/Resources/BootstrapperStyles/TwentyFiveDialog/PlayerLogo.png" Margin="0,60,0,0" />

        <Grid VerticalAlignment="Bottom" Background="#191A1F" Height="91">
            <ProgressBar Height="6" Width="576" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="Transparent" BorderThickness="0" Foreground="White" Style="{StaticResource SquareProgressBarStyle}" Tag="39" IsIndeterminate="{Binding ProgressIndeterminate, Mode=OneWay}" Maximum="{Binding ProgressMaximum, Mode=OneWay}" Value="{Binding ProgressValue, Mode=OneWay}" />
            <Image Height="32" Width="103" Source="/Resources/BootstrapperStyles/TwentyFiveDialog/Roblox.png" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0" />

            <Button Margin="0,0,32,0" Width="64" Height="38" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="{x:Static resources:Strings.Common_Cancel}" IsEnabled="{Binding CancelEnabled, Mode=OneWay}" Command="{Binding CancelInstallCommand}">
                <Button.Resources>
                    <CornerRadius x:Key="ControlCornerRadius">0</CornerRadius>
                </Button.Resources>
            </Button>

        </Grid>
    </Grid>
</base:WpfUiWindow>
